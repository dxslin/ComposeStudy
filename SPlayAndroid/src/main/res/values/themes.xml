<resources>
    <!-- Base application theme. -->
    <style name="Theme.ComposeStudy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/background</item>
        <item name="android:windowBackground">@drawable/img_splay_android_bg</item>
    </style>

    <style name="Theme.ComposeStudy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ComposeStudy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ComposeStudy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>